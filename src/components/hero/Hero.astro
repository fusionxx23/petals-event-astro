---
import { Image } from "astro:assets";
import pink from "../../images/hero.jpg";
import red from "../../images/hero-nobg.png";
---

<div
  class={`flex relative flex-col max-auto h-screen items-center bg-pink-300/5 md:flex-row justify-between  text-center md:text-left  px-6 md:px-14`}
  id="home"
>
  <div class="mx-auto w-[1200px] flex justify-between">
    <div data-aos="fade-up">
      <div
        class="flex w-[500px] flex-col space-y-6 items-center md:items-start"
      >
        <h2
          class="text-[64px] font-extralight tracking-tight text-gray-800 font-playFair"
        >
          Your Favourite Flower Shop
        </h2>
        <p class="text-gray-500 tracking-tight font-normal text-lg">
          This flower shop fits all your occasions. We will cater to all your
          events and we specialise in wedding and bridal events.
        </p>

        {/* Buttons Section */}
        <div class={`flex space-x-4 `}>
          <button
            class="bg-black text-white py-2.5 px-5 rounded-xl font-normal md:bg-[#4A051C] md:border md:border-black hover:bg-gray-900 md:hover:bg-purple-600 duration-100"
          >
            Our Products
          </button>
          <button
            class="border border-[#4A051C] text-[#4A051C] py-2.5 px-5 rounded-xl font-normal md:border-black md:text-black hover:bg-pink-200 duration-100"
          >
            Message Us
          </button>
        </div>
      </div>
    </div>
    <div class="">
      <Image
        src={red}
        alt="Flower Bouquet Desktop"
        class="rounded-xl"
        width={600}
        height={600}
      />
    </div>
    {/* Image Section */}
    {/* Text Section */}
  </div>
</div>
